<!-- Header hero image -->
<div class="project-hero" style="background-image: url(<%= asset_path('welding.jpg') %>);" >
	<div class="container">
		<div class="row">

		</div>
	</div>
</div>

<div class="dark-blue">
	<div class="blue-circle">
		<h5>Project</h5>
		<%= image_tag "line_art/wheel.png" %>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-md-8">
				<h4><%= @project.name %></h4>
				<p><%= @project.description %></p>
			</div> 
			<div class="col-md-2">
				<%= link_to "Edit", edit_admin_project_path(@project), class: "btn btn-default" %>
			</div>
			<div class="col-md-2">
				<%= link_to "Add Image", new_admin_project_image_path(@project), class: "btn btn-default" %>
			</div>
		</div>
		<div class="row">
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>Image</th>
							<th>Name</th>
							<th>Description</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						<% @project.images.each do |image| %>
							<tr>
								<td><%= image_tag image.image_attach.url(:thumb) %></td>
								<td><%= image.name %></td>
								<td><%= image.description %></td>
								<td>
									<%= link_to 'edit', edit_admin_project_image_path(@project, image), class: 'btn btn-default' %>
									<%= link_to 'delete', admin_project_image_path(@project, image), method: :delete, class: 'btn btn-default', data: { confirm: 'Are you sure?' } %>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div><!-- Table Responsive -->
		</div><!-- Row -->
	</div>
</div>